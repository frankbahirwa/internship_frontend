'use client';

import { useState } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import { User, Hospital, ArrowRight, ArrowLeft, Heart, Check, Loader2, MapPin, Phone, Mail, Lock, Calendar, Weight, Droplets, ShieldCheck, AlertCircle } from 'lucide-react';
import { useRouter } from 'next/navigation';
import Link from 'next/link';
import api from '@/lib/api';
import useAuthStore from '@/store/authStore';

const steps = [
    { id: 'role', title: 'Choose Role', icon: ShieldCheck },
    { id: 'details', title: 'Account Details', icon: Mail },
    { id: 'profile', title: 'User Profile', icon: User },
];

export default function RegisterPage() {
    const [currentStep, setCurrentStep] = useState(0);
    const [loading, setLoading] = useState(false);
    const [error, setError] = useState('');
    const [formData, setFormData] = useState({
        username: '',
        email: '',
        phone: '',
        password: '',
        role: 'DONOR', // Default
        city: '',
        dateOfBirth: '',
        weight: '',
        bloodType: '', // Required for donors
    });

    const router = useRouter();
    const setAuth = useAuthStore((state) => state.setAuth);

    const handleNext = () => setCurrentStep((prev) => Math.min(prev + 1, steps.length - 1));
    const handleBack = () => setCurrentStep((prev) => Math.max(prev - 1, 0));

    const handleSubmit = async (e) => {
        e.preventDefault();
        if (currentStep < steps.length - 1) {
            handleNext();
            return;
        }

        setLoading(true);
        setError('');

        // Prepare data (convert weight to number if donor)
        const payload = { ...formData };
        if (payload.role === 'DONOR' && payload.weight) {
            payload.weight = parseFloat(payload.weight);
        }
        if (payload.role === 'HOSPITAL') {
            delete payload.dateOfBirth;
            delete payload.weight;
            delete payload.bloodType;
        }

        try {
            const { data } = await api.post('/auth/register', payload);
            setAuth(data.user, data.access_token);

            // Redirect to respective dashboard
            router.push(`/dashboard/${data.user.role.toLowerCase()}`);
        } catch (err) {
            setError(err.response?.data?.message || 'Registration failed. Please try again.');
            // Keep on current step but show error
        } finally {
            setLoading(false);
        }
    };

    const stepVariants = {
        initial: { opacity: 0, x: 20 },
        animate: { opacity: 1, x: 0 },
        exit: { opacity: 0, x: -20 },
    };

    return (
        <div className="flex min-h-screen bg-obsidian text-white overflow-hidden font-inter">
            {/* Left Side: Branding & Visual */}
            <div className="hidden lg:flex lg:w-1/2 relative flex-col justify-center px-16 bg-ruby/5">
                <div className="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none">
                    <motion.div
                        animate={{ scale: [1, 1.2, 1], rotate: [0, -30, 0] }}
                        transition={{ duration: 20, repeat: Infinity, ease: "easeInOut" }}
                        className="absolute -bottom-1/4 -right-1/4 w-[150%] h-[150%] bg-gradient-to-tl from-ruby/20 via-transparent to-transparent opacity-30 rounded-full blur-[100px]"
                    />
                </div>

                {/* Blood Sharing Illustration Component */}
                <div className="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full h-full pointer-events-none overflow-hidden">
                    <svg viewBox="0 0 800 600" className="w-full h-full opacity-20">
                        <motion.path
                            d="M 100 300 Q 400 500 700 300"
                            fill="none"
                            stroke="var(--blood-ruby)"
                            strokeWidth="2"
                            strokeDasharray="1000"
                            initial={{ strokeDashoffset: 1000 }}
                            animate={{ strokeDashoffset: 0 }}
                            transition={{ duration: 3, repeat: Infinity, ease: "linear" }}
                        />
                        <motion.circle
                            animate={{ cx: [100, 400, 700], cy: [300, 500, 300] }}
                            transition={{ duration: 3, repeat: Infinity, ease: "linear" }}
                            r="6"
                            fill="var(--blood-ruby)"
                            className="blur-[2px]"
                        />
                    </svg>
                </div>

                <div className="relative z-10 max-w-xl">
                    <motion.div
                        initial={{ opacity: 0, x: -50 }}
                        animate={{ opacity: 1, x: 0 }}
                        transition={{ duration: 0.8 }}
                    >
                        <div className="flex items-center gap-3 mb-12">
                            <div className="w-12 h-12 bg-ruby rounded-2xl flex items-center justify-center shadow-lg shadow-ruby/40">
                                <Heart className="w-7 h-7 text-white fill-white" />
                            </div>
                            <span className="text-3xl font-black tracking-tighter uppercase italic">LifeLine</span>
                        </div>

                        <h1 className="text-5xl lg:text-6xl font-black leading-[1.1] tracking-tighter mb-8">
                            <span className="whitespace-nowrap">Experience <span className="text-ruby">Seamless</span></span> <br />
                            Life Saving.
                        </h1>

                        <p className="text-lg text-foreground/60 leading-relaxed mb-12 font-medium">
                            Join thousands of donors and medical facilities working together to ensure
                            no emergency goes unanswered.
                        </p>

                        {/* Progress Stepper (Vertical in Left Side) */}
                        <div className="space-y-8 relative">
                            <div className="absolute left-[19px] top-2 bottom-2 w-0.5 bg-foreground/5 z-0" />
                            {steps.map((step, idx) => (
                                <div key={step.id} className="relative z-10 flex items-center gap-6 group">
                                    <motion.div
                                        animate={{
                                            backgroundColor: idx <= currentStep ? 'var(--blood-ruby)' : 'var(--obsidian-light)',
                                            scale: idx === currentStep ? 1.1 : 1,
                                            boxShadow: idx === currentStep ? '0 0 20px rgba(224, 17, 95, 0.4)' : 'none'
                                        }}
                                        className={`w-10 h-10 rounded-xl flex items-center justify-center border ${idx <= currentStep ? 'border-ruby' : 'border-foreground/10'} transition-all duration-500`}
                                    >
                                        {idx < currentStep ? (
                                            <Check className="w-5 h-5 text-white" />
                                        ) : (
                                            <step.icon className={`w-5 h-5 ${idx === currentStep ? 'text-white' : 'text-foreground/30'}`} />
                                        )}
                                    </motion.div>
                                    <div className="flex flex-col">
                                        <span className={`text-[10px] font-black uppercase tracking-[0.2em] ${idx <= currentStep ? 'text-ruby' : 'text-foreground/20'}`}>
                                            Step 0{idx + 1}
                                        </span>
                                        <span className={`text-sm font-bold ${idx <= currentStep ? 'text-foreground' : 'text-foreground/40'}`}>
                                            {step.title}
                                        </span>
                                    </div>
                                </div>
                            ))}
                        </div>
                    </motion.div>
                </div>

                {/* Big Background Decoration */}
                <div className="absolute left-0 bottom-0 pointer-events-none opacity-5 -translate-x-1/4 translate-y-1/4">
                    <Droplets className="w-[800px] h-[800px] text-ruby fill-ruby" />
                </div>
            </div>

            {/* Right Side: Registration Form */}
            <div className="w-full lg:w-1/2 flex items-center justify-center p-8 lg:p-16 bg-obsidian relative">
                <motion.div
                    initial={{ opacity: 0, scale: 0.98 }}
                    animate={{ opacity: 1, scale: 1 }}
                    className="w-full max-w-[580px] relative z-10"
                >
                    <div className="mb-10 text-center">
                        <h2 className="text-3xl md:text-4xl font-black text-white mb-2 tracking-tight uppercase">Registration</h2>
                        <p className="text-foreground/40 text-[10px] font-black tracking-[0.3em] uppercase">
                            {steps[currentStep].title} • {currentStep + 1} of {steps.length}
                        </p>
                    </div>

                    <form onSubmit={handleSubmit} className="flex-1 flex flex-col min-h-[450px]">
                        <AnimatePresence mode="wait">
                            <motion.div
                                key={currentStep}
                                variants={stepVariants}
                                initial="initial"
                                animate="animate"
                                exit="exit"
                                transition={{ duration: 0.4, ease: [0.23, 1, 0.32, 1] }}
                                className="flex-1"
                            >
                                {currentStep === 0 && (
                                    <div className="space-y-8 py-4">
                                        <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                                            {[
                                                { id: 'DONOR', icon: User, label: 'Hero Donor', desc: 'Donate blood/platelets' },
                                                { id: 'HOSPITAL', icon: Hospital, label: 'Medical Facility', desc: 'Request blood units' },
                                            ].map((roleOption) => (
                                                <button
                                                    key={roleOption.id}
                                                    type="button"
                                                    onClick={() => setFormData({ ...formData, role: roleOption.id })}
                                                    className={`group/role relative p-6 rounded-2xl border-2 transition-all duration-500 overflow-hidden ${formData.role === roleOption.id
                                                        ? 'bg-ruby/10 border-ruby shadow-[0_0_40px_rgba(230,57,70,0.15)] ring-4 ring-ruby/5'
                                                        : 'bg-foreground/5 border-foreground/5 hover:border-foreground/20'
                                                        }`}
                                                >
                                                    <div className={`w-12 h-12 rounded-xl flex items-center justify-center transition-all ${formData.role === roleOption.id ? 'bg-ruby text-white' : 'bg-foreground/5 text-foreground/20 group-hover/role:bg-ruby/10 group-hover/role:text-ruby'
                                                        }`}>
                                                        <roleOption.icon className="w-6 h-6" />
                                                    </div>
                                                    <div>
                                                        <div className="font-bold text-lg uppercase tracking-wide mb-1 text-white">{roleOption.label}</div>
                                                        <div className="text-xs text-foreground/60 font-medium">{roleOption.desc}</div>
                                                    </div>
                                                    {formData.role === roleOption.id && (
                                                        <motion.div layoutId="roleCheck" className="absolute top-4 right-4 bg-ruby rounded-full p-1.5 shadow-lg shadow-ruby/40">
                                                            <Check className="w-3.5 h-3.5 text-white" />
                                                        </motion.div>
                                                    )}
                                                </button>
                                            ))}
                                        </div>
                                        <p className="text-center text-[10px] uppercase font-black tracking-widest text-foreground/20 px-8 leading-loose mt-8">
                                            Your role defines how you interact with the platform. Donors save lives, Hospitals request units.
                                        </p>
                                    </div>
                                )}

                                {currentStep === 1 && (
                                    <div className="space-y-6 py-4">
                                        <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                                            <div className="space-y-3">
                                                <label className="text-sm font-bold text-foreground/60 ml-1">Username</label>
                                                <div className="relative group/field">
                                                    <User className="absolute left-4 top-1/2 -translate-y-1/2 w-4 h-4 text-foreground/20 group-focus-within/field:text-ruby transition-all" />
                                                    <input
                                                        type="text" required placeholder="User name"
                                                        className="w-full bg-foreground/5 border border-foreground/10 rounded-xl py-4 pl-11 pr-5 outline-none focus:border-ruby/50 focus:ring-2 focus:ring-ruby/10 transition-all font-medium text-foreground placeholder:text-foreground/20 text-sm"
                                                        value={formData.username}
                                                        onChange={(e) => setFormData({ ...formData, username: e.target.value })}
                                                    />
                                                </div>
                                            </div>
                                            <div className="space-y-3">
                                                <label className="text-sm font-bold text-foreground/60 ml-1">Email Address</label>
                                                <div className="relative group/field">
                                                    <Mail className="absolute left-4 top-1/2 -translate-y-1/2 w-4 h-4 text-foreground/20 group-focus-within/field:text-ruby transition-all" />
                                                    <input
                                                        type="email" required placeholder="hello@lifeline.com"
                                                        className="w-full bg-foreground/5 border border-foreground/10 rounded-xl py-4 pl-11 pr-5 outline-none focus:border-ruby/50 focus:ring-2 focus:ring-ruby/10 transition-all font-medium text-foreground placeholder:text-foreground/20 text-sm"
                                                        value={formData.email}
                                                        onChange={(e) => setFormData({ ...formData, email: e.target.value })}
                                                    />
                                                </div>
                                            </div>
                                        </div>
                                        <div className="space-y-3">
                                            <label className="text-sm font-bold text-foreground/60 ml-1">Phone Number</label>
                                            <div className="relative group/field">
                                                <Phone className="absolute left-4 top-1/2 -translate-y-1/2 w-4 h-4 text-foreground/20 group-focus-within/field:text-ruby transition-all" />
                                                <input
                                                    type="tel" required placeholder="+123 456 7890"
                                                    className="w-full bg-foreground/5 border border-foreground/10 rounded-xl py-4 pl-11 pr-5 outline-none focus:border-ruby/50 focus:ring-2 focus:ring-ruby/10 transition-all font-medium text-foreground placeholder:text-foreground/20 text-sm"
                                                    value={formData.phone}
                                                    onChange={(e) => setFormData({ ...formData, phone: e.target.value })}
                                                />
                                            </div>
                                        </div>
                                        <div className="space-y-3">
                                            <label className="text-sm font-bold text-foreground/60 ml-1">Strong Password</label>
                                            <div className="relative group/field">
                                                <Lock className="absolute left-4 top-1/2 -translate-y-1/2 w-4 h-4 text-foreground/20 group-focus-within/field:text-ruby transition-all" />
                                                <input
                                                    type="password" required placeholder="••••••••"
                                                    className="w-full bg-foreground/5 border border-foreground/10 rounded-xl py-4 pl-11 pr-5 outline-none focus:border-ruby/50 focus:ring-2 focus:ring-ruby/10 transition-all font-medium text-foreground placeholder:text-foreground/20 text-sm"
                                                    value={formData.password}
                                                    onChange={(e) => setFormData({ ...formData, password: e.target.value })}
                                                />
                                            </div>
                                        </div>
                                    </div>
                                )}

                                {currentStep === 2 && (
                                    <div className="space-y-6 py-4">
                                        <div className="space-y-3">
                                            <label className="text-sm font-bold text-foreground/60 ml-1">City / Region</label>
                                            <div className="relative group/field">
                                                <MapPin className="absolute left-4 top-1/2 -translate-y-1/2 w-4 h-4 text-foreground/20 group-focus-within/field:text-ruby transition-all" />
                                                <input
                                                    type="text" required placeholder="e.g. San Francisco"
                                                    className="w-full bg-foreground/5 border border-foreground/10 rounded-xl py-4 pl-11 pr-5 outline-none focus:border-ruby/50 focus:ring-2 focus:ring-ruby/10 transition-all font-medium text-foreground placeholder:text-foreground/20 text-sm"
                                                    value={formData.city}
                                                    onChange={(e) => setFormData({ ...formData, city: e.target.value })}
                                                />
                                            </div>
                                        </div>

                                        {formData.role === 'DONOR' && (
                                            <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                                                <div className="space-y-3">
                                                    <label className="text-sm font-bold text-foreground/60 ml-1">Birth Date</label>
                                                    <div className="relative group/field">
                                                        <Calendar className="absolute left-5 top-1/2 -translate-y-1/2 w-5 h-5 text-foreground/20 group-focus-within/field:text-ruby transition-all" />
                                                        <input
                                                            type="date" required
                                                            className="w-full bg-foreground/5 border border-foreground/10 rounded-2xl py-5 pl-14 pr-5 outline-none focus:border-ruby/50 focus:ring-4 focus:ring-ruby/10 transition-all font-medium text-foreground appearance-none"
                                                            value={formData.dateOfBirth}
                                                            onChange={(e) => setFormData({ ...formData, dateOfBirth: e.target.value })}
                                                        />
                                                    </div>
                                                </div>
                                                <div className="space-y-3">
                                                    <label className="text-sm font-bold text-foreground/60 ml-1">Weight (kg)</label>
                                                    <div className="relative group/field">
                                                        <Weight className="absolute left-5 top-1/2 -translate-y-1/2 w-5 h-5 text-foreground/20 group-focus-within/field:text-ruby transition-all" />
                                                        <input
                                                            type="number" required placeholder="min 50"
                                                            className="w-full bg-foreground/5 border border-foreground/10 rounded-2xl py-5 pl-14 pr-5 outline-none focus:border-ruby/50 focus:ring-4 focus:ring-ruby/10 transition-all font-medium text-foreground"
                                                            value={formData.weight}
                                                            onChange={(e) => setFormData({ ...formData, weight: e.target.value })}
                                                        />
                                                    </div>
                                                </div>
                                            </div>
                                        )}

                                        {formData.role === 'DONOR' && (
                                            <div className=\"space-y-3\">
                                                <label className=\"text-sm font-bold text-foreground/60 ml-1\">Blood Type *</label>
                                                <div className=\"grid grid-cols-4 gap-3\">
                                {['A+', 'A-', 'B+', 'B-', 'AB+', 'AB-', 'O+', 'O-'].map((type) => (
                                    <button
                                        key={type}
                                        type=\"button\"
                                onClick={() => setFormData({ ...formData, bloodType: type })}
                                className={`group/blood relative p-4 rounded-xl border-2 transition-all duration-300 ${formData.bloodType === type
                                        ? 'bg-ruby/10 border-ruby shadow-[0_0_20px_rgba(224,17,95,0.15)] ring-2 ring-ruby/5'
                                        : 'bg-foreground/5 border-foreground/10 hover:border-ruby/30 hover:bg-ruby/5'
                                    }`}
                                                        >
                                <div className=\"flex flex-col items-center gap-2\">
                                <Droplets className={`w-5 h-5 transition-all ${formData.bloodType === type ? 'text-ruby' : 'text-foreground/30 group-hover/blood:text-ruby/50'
                                    }`} />
                                <span className={`text-lg font-black ${formData.bloodType === type ? 'text-ruby' : 'text-foreground/60'
                                    }`}>{type}</span>
                            </div>
                            {formData.bloodType === type && (
                                <motion.div layoutId=\"bloodCheck\" className=\"absolute -top-1 -right-1 bg-ruby rounded-full p-1 shadow-lg shadow-ruby/40\">
                            <Check className=\"w-3 h-3 text-white\" />
                        </motion.div>
                                                            )}
                    </button>
                                                    ))}
            </div>
            <p className=\"text-[10px] text-foreground/30 font-medium ml-1\">Select your blood type for accurate matching</p>
                                            </div >
                                        )
}

{
    error && (
        <motion.div
            initial={{ opacity: 0, y: 10 }}
            animate={{ opacity: 1, y: 0 }}
            className="bg-ruby/10 border-l-4 border-ruby p-4 rounded-r-xl flex items-center gap-3"
        >
            <AlertCircle className="w-5 h-5 text-ruby shrink-0" />
            <span className="text-xs font-bold text-ruby">{error}</span>
        </motion.div>
    )
}
                                    </div >
                                )}
                            </motion.div >
                        </AnimatePresence >

    <div className="flex gap-4 mt-12">
        {currentStep > 0 && (
            <button
                type="button"
                onClick={handleBack}
                className="flex-[0.25] py-5 rounded-2xl border border-foreground/10 bg-foreground/5 hover:bg-ruby/5 hover:border-ruby/20 transition-all flex items-center justify-center gap-2 font-black uppercase tracking-widest text-xs"
            >
                <ArrowLeft className="w-3 h-3" />
            </button>
        )}
        <button
            type="submit"
            disabled={loading}
            className="flex-1 btn-primary py-3.5 text-[10px] font-black tracking-[0.2em] uppercase flex items-center justify-center gap-2 group transition-all hover:shadow-ruby/30 active:scale-[0.98] disabled:opacity-50"
        >
            {loading ? (
                <Loader2 className="w-4 h-4 animate-spin" />
            ) : (
                <>
                    {currentStep === steps.length - 1 ? 'Finish Account' : 'Continue'}
                    <ArrowRight className="w-3.5 h-3.5 group-hover:translate-x-1 transition-transform" />
                </>
            )}
        </button>
    </div>
                    </form >

    <div className="mt-12 text-center">
        <p className="text-foreground/40 text-xs font-bold uppercase tracking-widest">
            Already a hero?{' '}
            <Link href="/login" className="text-ruby hover:underline">
                Log in here
            </Link>
        </p>

        <Link href="/" className="inline-flex items-center gap-2 mt-8 text-[10px] text-foreground/20 hover:text-foreground/40 transition-colors uppercase font-black tracking-[0.2em]">
            <ArrowLeft className="w-3 h-3" /> Back to home
        </Link>
    </div>
                </motion.div >
            </div >
        </div >
    );
}
